@model IEnumerable<VoiceRecognition.Models.Flight>
@{ ViewBag.Title = "Flights";
}

<style>
    .search-tabs {
        margin-top: -10%;
    }
</style>
<!-- Banner Section Start -->
<section class="banner">
    <div class="banner-wrapper">
        <div class="inner-banner owl-carousel owl-theme">
            <img class="owl-lazy" src="~/images/main-slider/air1.jpg" />
            <img class="owl-lazy" src="~/images/main-slider/air4.jpg" />
            <img class="owl-lazy" src="~/images/main-slider/air5.jpg" />
        </div>
    </div>
    <div class="search-tabs">
        <div class="container">
            <div class="row">
                <h2>Available Flight List</h2>
                <table border="1" class="table table-condensed table-hover table-sm table-dark">
                    <thead>
                        <tr class="bg-warning">
                            <th>
                                Airline Name
                            </th>
                            <th>
                                Route
                            </th>
                            <th>
                                Time
                            </th>
                            <th>Price (BDT)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Airline
                                </td>
                                <td>
                                    @item.Depurture - @item.Destination
                                </td>
                                <td>
                                    @item.Time
                                </td>
                                <td>
                                    @item.Price.ToString("N")
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                        Book Now
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header ">
                <h5 class="modal-title" id="exampleModalLabel">Flight Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to confirm this flight?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" data-dismiss="modal">Confirm</button>
            </div>
        </div>
    </div>
</div>